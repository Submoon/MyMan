{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules"]
}
